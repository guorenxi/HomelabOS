---
version: '3'

services:
  # Web API for Ansible - never expose through Traefik!
  ansible-api:
    image: ansible-api:latest
    restart: unless-stopped
    ports:
      - 8765:8765
    environment:
      - API_HOST={{ host_ip }}
#      - API_ALLOW_IP={{ host_ip }}
#      - API_WS_SUB=
#      - API_TIMEOUT 3600
#      - API_WORKERS 1
#      - API_LOG_PATH /tmp/ansible-api.log
#      - API_SIGN_KEY secret
#      - API_SIGN_MODE sha256
#      - API_PORT 8765
#      - API_PLAYBOOK_PATH /playbooks
#      - API_SCRIPT_PATH /scripts
    volumes:
      - "{{ volumes_root }}/install:/playbooks"
      - "{{ volumes_root }}/ansible-api/scripts:/scripts"
      - "/home/hlos/.ssh/id_rsa:/root/.ssh/id_rsa"
      - "/home/hlos/.ssh/id_rsa.pub:/root/.ssh/id_rsa.pub"
      - "/home/hlos/.homelabos_vault_pass:/ansible_vault_pass"

